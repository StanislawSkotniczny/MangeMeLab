{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es5",
            "dom"
        ],
        "types": [
            "cypress",
            "node"
        ],
        "noEmit": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "../node_modules/cypress",
        "../cypress.config.ts"
    ],
    "exclude": [
        "../node_modules",
        "../dist"
    ]
}